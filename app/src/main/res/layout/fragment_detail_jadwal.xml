<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".DetailJadwalFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:id="@+id/table_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">
            <TableRow>
                <ImageView
                    android:id="@+id/img_club_home"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
                <TextView
                    android:id="@+id/txt_versus"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:text="VS"
                    android:textSize="35sp"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/img_club_away"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/txt_home_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_club_home"
                    android:textSize="14sp"
                    android:gravity="center"
                    tools:text="Barcelona FC"/>
                <TextView
                    android:text="Team Name"
                    android:padding="3dp"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/txt_away_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="center"
                    tools:text="Liverpool FC"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/txt_score_home"
                    android:padding="3dp"
                    android:textStyle="bold"
                    android:textSize="50sp"
                    android:gravity="center"
                    tools:text="2"/>
                <TextView
                    android:layout_height="match_parent"
                    android:text="Score"
                    android:padding="3dp"
                    android:textAllCaps="true"
                    android:gravity="center|center_vertical"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/txt_score_away"
                    android:padding="3dp"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    tools:text="0"/>
            </TableRow>
        </TableLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_below="@id/table_layout"
            android:stretchColumns="2">
            <TableRow>
                <TextView
                    android:text="Competition"
                    android:padding="3dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"/>
                <TextView
                    android:text=":"
                    android:padding="3dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/txt_competition"
                    tools:text="Premier League"
                    android:padding="3dp"
                    android:textAllCaps="true" />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Matchday"
                    android:padding="3dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"/>
                <TextView
                    android:text=":"
                    android:padding="3dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/txt_matchday"
                    tools:text="14"
                    android:padding="3dp"
                    android:textAllCaps="true" />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Stage"
                    android:padding="3dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"/>
                <TextView
                    android:text=":"
                    android:padding="3dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/txt_stage"
                    tools:text="Knockout Round"
                    android:padding="3dp"
                    android:textAllCaps="true" />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Group"
                    android:padding="3dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"/>
                <TextView
                    android:text=":"
                    android:padding="3dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/txt_group"
                    tools:text="Group A"
                    android:padding="3dp"
                    android:textAllCaps="true" />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Date"
                    android:padding="3dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"/>
                <TextView
                    android:text=":"
                    android:padding="3dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/txt_date"
                    tools:text="10 Oct 2018"
                    android:padding="3dp"
                    android:textAllCaps="true" />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Status"
                    android:padding="3dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"/>
                <TextView
                    android:text=":"
                    android:padding="3dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/txt_status"
                    tools:text="Finished"
                    android:padding="3dp"
                    android:textAllCaps="true" />
            </TableRow>
        </TableLayout>
    </RelativeLayout>
</FrameLayout>