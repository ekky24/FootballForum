<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="8dp">
        <TextView
            android:id="@+id/txt_match_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textAllCaps="true"
            tools:text="Live" />
        <ImageView
            android:id="@+id/img_club_home"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toLeftOf="@id/linear_match"
            android:layout_centerVertical="true"
            android:layout_marginTop="30dp"
            android:layout_toStartOf="@id/linear_match" />
        <LinearLayout
            android:id="@+id/linear_match"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_match_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="22 Des 2018"/>
            <TextView
                android:id="@+id/txt_match_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_marginTop="10dp"
                tools:text="La Liga" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">
                <TextView
                    android:id="@+id/txt_score_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_club_home"
                    android:layout_toLeftOf="@id/linear_match"
                    android:textStyle="bold"
                    android:textSize="35sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    tools:text="2"/>
                <TextView
                    android:id="@+id/txt_versus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_club_home"
                    android:layout_toLeftOf="@id/linear_match"
                    android:textStyle="bold"
                    android:textSize="35sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="-"/>
                <TextView
                    android:id="@+id/txt_score_away"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_club_home"
                    android:layout_toLeftOf="@id/linear_match"
                    android:textStyle="bold"
                    android:textSize="35sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    tools:text="0"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/img_club_away"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/linear_match"
            android:layout_centerVertical="true"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/linear_match" />
        <TextView
            android:id="@+id/txt_match_event_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            tools:text="Weekday 14"/>
        <ImageButton
            android:id="@+id/img_button_forum"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_forum"
            android:layout_alignParentRight="true"
            android:background="?android:selectableItemBackground"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>